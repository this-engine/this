{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "generate",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/bin"
			},
			"command": "cmake \"${workspaceRoot}\"",
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/bin"
			},
			"command": "make -j8",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["absolute"]
			}
		},
		{
			"label": "generate-build-run",
			"dependsOrder": "sequence",
			"dependsOn" : ["generate", "build"],
			"problemMatcher": []
		}

	]
}